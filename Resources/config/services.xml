<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="coral.sitemap.class">Coral\SiteBundle\Service\Sitemap</parameter>
        <parameter key="coral.site_cache.class">Doctrine\Common\Cache\PhpFileCache</parameter>
        <parameter key="coral.page.class">Coral\SiteBundle\Service\Page</parameter>
        <parameter key="coral.redirection.class">Coral\SiteBundle\Service\Redirection</parameter>
        <parameter key="coral.renderer.class">Coral\SiteBundle\Service\Renderer</parameter>
        <parameter key="coral.request_filter.class">Coral\SiteBundle\Service\RequestFilter</parameter>
    </parameters>

    <services>
        <service id="coral.site.cache" class="%coral.site_cache.class%">
            <argument>%kernel.cache_dir%</argument>
            <call method="setNamespace">
                <argument>coral_site</argument>
            </call>
        </service>

        <service id="coral.sitemap" class="%coral.sitemap.class%">
            <argument type="service" id="coral.site.cache"/>
            <argument>%coral.content.path%</argument>
        </service>

        <service id="coral.context" class="Symfony\Component\DependencyInjection\ParameterBag\ParameterBag">
        </service>

        <service id="coral.page" class="%coral.page.class%">
            <argument type="service" id="request_stack"/>
            <argument>%coral.content.path%</argument>
        </service>

        <service id="coral.redirection" class="%coral.redirection.class%">
            <argument>%coral.config.path%</argument>
        </service>

        <!-- Inject content uris -->
        <service id="coral.listener.route_resolve" class="%coral.request_filter.class%">
            <argument>%coral.content.path%</argument>
            <argument type="service" id="coral.context"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="coral.redirection"/>

            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="100" />
        </service>

        <!-- Renderer configuration -->
        <service id="coral.renderer" class="%coral.renderer.class%">
            <argument>%coral.content.path%</argument>
        </service>

        <service id="coral.filter.markdown" class="Coral\SiteBundle\Content\Filter\Markdown">
            <argument type="service" id="markdown.parser" />

            <tag name="coral.renderer.filter" type="markdown" />
            <tag name="coral.renderer.filter" type="md" />
        </service>

        <service id="coral.filter.passthru" class="Coral\SiteBundle\Content\Filter\Passthru">
            <tag name="coral.renderer.filter" type="html" />
            <tag name="coral.renderer.filter" type="txt" />
        </service>

        <!-- Twig needs to have string loader for coral.filter.Twig -->
        <service id="twig.stringloader" class="Twig_Loader_String">
            <tag name="twig.loader" />
        </service>

        <service id="coral.filter.twig" class="Coral\SiteBundle\Content\Filter\Twig">
            <argument type="service" id="twig" />
            <argument type="service" id="coral.context"/>

            <tag name="coral.renderer.filter" type="twig" />
        </service>

        <service id="coral.filter.connect" class="Coral\SiteBundle\Content\Filter\Connect">
            <argument type="service" id="coral.connector" />
            <argument type="service" id="twig" />
            <argument type="service" id="coral.context"/>

            <tag name="coral.renderer.filter" type="connect" />
        </service>

        <!-- Twig extension -->
        <service id="coral.twig.path_extension" class="Coral\SiteBundle\Twig\PathExtension">
            <argument type="service" id="request_stack" />

            <tag name="twig.extension" />
        </service>
    </services>
</container>
